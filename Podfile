  pod 'DriveKitDriverData', :git => 'https://github.com/DriveQuantPublic/drivekit-ios-sdk.git', :tag => '1.1.1'
  #pod 'DriveKitDriverDataUI', :git => 'https://github.com/DriveQuantPublic/drivekit-ui-frameworks.git', :tag => '1.1.1'
  pod 'UICircularProgressRing'
end


